<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5" />

                    <LinearLayout style="@style/menu_ic">

                        <ImageView
                            android:id="@+id/page1_btn"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_page7_1" />

                        <TextView
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:text="อาหารชะลอ" />
                    </LinearLayout>

                    <LinearLayout style="@style/menu_ic">

                        <ImageView
                            android:id="@+id/page2_btn"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_page7_2" />

                        <TextView
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:text="อาหารควรเลี่ยง" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5" />

                    <LinearLayout style="@style/menu_ic">

                        <ImageView
                            android:id="@+id/page3_btn"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_page7_3" />

                        <TextView
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:text="ออกกำลังกาย" />
                    </LinearLayout>

                    <LinearLayout style="@style/menu_ic">

                        <ImageView
                            android:id="@+id/page4_btn"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_page7_4" />

                        <TextView
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:text="บริหารสมอง" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5" />

                    <LinearLayout style="@style/menu_ic">

                        <ImageView
                            android:id="@+id/page5_btn"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_page7_5" />

                        <TextView
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:text="ฟื้นฟูความจำ" />
                    </LinearLayout>

                    <LinearLayout style="@style/menu_ic">

                        <ImageView
                            android:id="@+id/page6_btn"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_page7_6" />

                        <TextView
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:text="รับรู้ปัจจุบัน" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5" />

                    <LinearLayout style="@style/menu_ic">

                        <ImageView
                            android:id="@+id/page7_btn"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_page7_7" />

                        <TextView
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:text="เข้าสังคม" />
                    </LinearLayout>

                    <LinearLayout style="@style/menu_ic">

                        <ImageView
                            android:id="@+id/page8_btn"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_page7_8" />

                        <TextView
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:text="จัดการความเครียด" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="1">

                    <LinearLayout style="@style/menu_ic">

                        <ImageView
                            android:id="@+id/page9_btn"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_page7_9" />

                        <TextView
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:text="จิตวิญญาณ" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/backImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_back" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_alarm"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end">

        <include layout="@layout/drawer_alarm" />
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>