<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TextView
                android:id="@+id/page_title"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38sp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:fontFamily="@font/kwang"
                style="@style/TextAppearance.AppCompat.Headline"/>
        </FrameLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_below="@id/frame">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">
                <TextView
                    android:text="@string/mmse_3_title"
                    android:id="@+id/bigTitleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textSize="20sp"
                    android:layout_marginBottom="16dp" />
                <TextView
                    android:text="@string/mmse_3_text1"
                    android:id="@+id/textTv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_below="@id/bigTitleTv"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="18sp"/>
                <TextView
                    android:text="@string/mmse_3_text2"
                    android:id="@+id/textTv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_below="@id/textTv1"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:id="@+id/option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTv2"
                    android:layout_marginBottom="16dp">
                    <CheckBox
                        android:id="@+id/option1_1"
                        android:text="ดอกไม้"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        style="@style/TextAppearance.AppCompat.Body1"/>
                    <CheckBox
                        android:id="@+id/option1_2"
                        android:text="แม่น้ำ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        style="@style/TextAppearance.AppCompat.Body1"/>
                    <CheckBox
                        android:id="@+id/option1_3"
                        android:text="รถยนต์"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        style="@style/TextAppearance.AppCompat.Body1"/>
                </LinearLayout>
                <TextView
                    android:text="@string/mmse_3_text3"
                    android:id="@+id/textTv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_below="@id/option1"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:id="@+id/option2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTv3">
                    <CheckBox
                        android:id="@+id/option2_1"
                        android:text="ต้นไม้"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        style="@style/TextAppearance.AppCompat.Body1"/>
                    <CheckBox
                        android:id="@+id/option2_2"
                        android:text="ทะเล"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        style="@style/TextAppearance.AppCompat.Body1"/>
                    <CheckBox
                        android:id="@+id/option2_3"
                        android:text="รถยนต์"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_marginBottom="16dp"/>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
        <ImageView
            android:id="@+id/forwardBtn"
            android:src="@drawable/ic_forward"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:layout_marginRight="16dp"/>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>