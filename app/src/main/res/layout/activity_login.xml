<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_background"
    android:scrollbars="none">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />
        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เข้าสู่ระบบ"
            style="@style/login_text"
            android:textSize="36sp"
            android:textColor="#ffffff"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ชื่อ - สกุล"
        style="@style/login_text"
        android:textSize="26sp" />
    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        android:inputType="textPersonName"
        android:textColor="#424242"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">
        <RadioGroup
            android:id="@+id/sex_radio"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เพศ"
                style="@style/login_text"
                android:textSize="26sp"/>
            <RadioButton
                android:id="@+id/sex_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชาย"
                style="@style/login_text"
                android:textSize="22sp"/>
            <RadioButton
                android:id="@+id/sex_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="หญิง"
                style="@style/login_text"
                android:textSize="22sp"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="อายุ"
                style="@style/login_text"
                android:textSize="26sp"/>
            <EditText
                android:id="@+id/ageEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:inputType="number"
                android:maxLength="3"
                android:textColor="#424242"
                android:background="@drawable/edittext_background"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">
        <RadioGroup
            android:id="@+id/religion_radio"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ศาสนา"
                style="@style/login_text"
                android:textSize="26sp"/>
            <RadioButton
                android:id="@+id/religion_thai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ไทยพุธ"
                style="@style/login_text"
                android:textSize="22sp"/>
            <RadioButton
                android:id="@+id/religion_islam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="อิสลาม"
                style="@style/login_text"
                android:textSize="22sp"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="อาชีพ"
                style="@style/login_text"
                android:textSize="26sp"/>
            <Spinner
                android:id="@+id/jobSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="#424242" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ระดับการศึกษา"
            style="@style/login_text"
            android:textSize="26sp"/>
        <Spinner
            android:id="@+id/educationSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="#424242" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="โรคประจำตัว"
            style="@style/login_text"
            android:textSize="26sp"
            android:layout_marginTop="8dp"/>
        <Spinner
            android:id="@+id/diseaseSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="#424242" />
    </LinearLayout>
    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ยืนยัน"
        android:layout_gravity="center"
        android:textSize="26sp"
        android:fontFamily="@font/kwang"
        android:layout_margin="16dp"/>
</LinearLayout>
</ScrollView>