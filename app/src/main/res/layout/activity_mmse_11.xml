<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">
        <TextView
            android:id="@+id/page_title"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="38sp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/kwang"
            style="@style/TextAppearance.AppCompat.Headline"/>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
        <TextView
            android:text="Visuoconstructionทดสอบความสัมพันธ์ระหว่าง ตา กับ มือ"
            android:id="@+id/bigTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Title"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:text="ข้อนี้เป็นคําสั่ง &quot;จงวาดภาพให้เหมือนภาพตัวอย่าง&quot;\nผู้ทดสอบยื่นกระดาษเปล่าให้ผู้ถูกทดสอบ"
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Title"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:layout_below="@id/bigTitleTv"/>
        <ImageView
            android:id="@+id/shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_pic"
            android:layout_below="@id/titleTv"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:text="ข้อบ่งชี้ วาดได้ถูกต้อง โดยรูป 5 เหลี่ยมต้องมี 5 มุมทั้งสองรูป การตัดกันต้องเกิดสี่เหลี่ยมด้านใน"
            android:id="@+id/textTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Title"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:layout_below="@id/shape"
            android:layout_marginTop="16dp"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTv">
            <RadioButton
                android:id="@+id/correct"
                android:text="สามารถวาดได้ตามข้อบ่งชี้"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                style="@style/TextAppearance.AppCompat.Body1"/>
            <RadioButton
                android:id="@+id/incorrect"
                android:text="ไม่สามารถวาดได้ตามข้อบ่งชี้"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                style="@style/TextAppearance.AppCompat.Body1"/>
        </RadioGroup>
    </RelativeLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/forwardBtn"
        android:src="@drawable/ic_forward"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:layout_marginRight="16dp"/>
</RelativeLayout>